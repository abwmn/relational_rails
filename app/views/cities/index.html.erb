<h2>All Cities</h2>
<%= link_to 'New City', new_city_path %><br>
<%= link_to 'Sort by Name', cities_path(sort: 'name') %>
<ul>
  <% @cities.each do |city| %>
    <div id="city-<%= city.id %>">
    <h3><%= link_to city.name, city_path(city) %></h3>
    <li>Created: <%= city.created_at.to_s(:long) %></li>
    <li>Population: <%= city.population %></li>
    <li>Technological Level: <%= city.technological_level %></li>
    <li>Inhabited: <%= city.inhabited %></li>
    <li>Number of inhabitants: <%= city.inhabitants.count %></li>
    <%= link_to 'Inhabitants', "/cities/#{city.id}/city_inhabitants" %><br>
    <%= link_to 'Edit City', edit_city_path(city) %>
    </div>
  <% end %>
</ul>
